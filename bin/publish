#!/bin/bash
set -eu
set -x
cd `dirname "$0"`
cd ..

root=$PWD

./bin/package

rm -rf tmp
mkdir -p tmp/package tmp/svn

svn co http://plugins.svn.wordpress.org/evalor tmp/svn
cd tmp/svn
svn rm --force trunk
mkdir trunk

cd $root/tmp/package
unzip $root/dist/wordpress-evalor.zip
rsync -a evalor/ $root/tmp/svn/trunk/

cd $root/tmp/svn
svn add --force trunk
svn ci -m 'Update plugin' --username apeschar --no-auth-cache

rm -rf $root/tmp
